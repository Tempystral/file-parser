{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/ts/reader.test.ts.bak"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}